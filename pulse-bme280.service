[Unit]\nDescription=Pulse BME280 reader\nAfter=network.target\n\n[Service]\nType=simple\nUser=pi\nWorkingDirectory=/opt/pulse/services/sensors\nExecStart=/opt/pulse/.venv/bin/python /opt/pulse/services/sensors/bme280_reader.py\nRestart=always\nRestartSec=3\nStandardOutput=append:/var/log/pulse/bme280.log\nStandardError=append:/var/log/pulse/bme280.err\n\n[Install]\nWantedBy=pulse-sensors.target\n